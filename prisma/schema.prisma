// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== USER TRACKING & CONVERSIONS =====

model UserTracking {
  id        String   @id @default(cuid())
  email     String   @unique
  
  // Meta tracking identifiers
  fbp       String?  // Facebook Browser ID
  fbc       String?  // Facebook Click ID
  
  // User data
  firstName String?
  lastName  String?
  phone     String?
  city      String?
  state     String?
  zip       String?
  country   String?  @default("br")
  
  // Attribution data
  firstTouchSource  String?
  firstTouchMedium  String?
  lastTouchSource   String?
  lastTouchMedium   String?
  touchpointCount   Int?     @default(1)
  
  // UTM data (last touch)
  utmSource         String?
  utmMedium         String?
  utmCampaign       String?
  utmContent        String?
  utmTerm           String?
  
  // Click IDs
  fbclid            String?
  gclid             String?
  
  // Session tracking
  sessionId         String?
  clientIpAddress   String?
  clientUserAgent   String?
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Indexes for performance
  @@index([email])
  @@index([phone])
  @@index([fbp])
  @@index([sessionId])
  @@index([createdAt])
  @@index([utmSource, utmMedium])
}